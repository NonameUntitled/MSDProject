{
  "experiment_name": "performer_lr1e-5_2heads_2layers_8bs_2000seqlen_16nb",
  "epochs_num": 20,
  "model": {
    "type": "performer",
    "projector": {
      "embedding_dim": 256
    },
    "encoder": {
      "hidden_size": 256,
      "num_heads": 4,
      "num_layers": 4,
      "user_cls_only": true,
      "output_dim": 1
    }
  },
  "dataloader": {
    "train": {
      "batch_size": 64,
      "shuffle": true,
      "drop_last": true
    },
    "val": {
      "batch_size": 64,
      "shuffle": true,
      "drop_last": true
    }
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 5,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "precision": {"type": "precision"}
        }
      }
    ]
  }
}
