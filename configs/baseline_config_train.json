{
  "experiment_name": "baseline_test",
  "epochs_num": 5,
  "dataset": {
    "val_size": 0.2,
    "max_history_len": 40
  },
  "dataloader": {
    "train": {
      "batch_size": 256,
      "shuffle": true,
      "drop_last": true
    },
    "val": {
      "batch_size": 256,
      "shuffle": true,
      "drop_last": true
    }
  },
  "model": {
    "type": "baseline",
    "projector": {
      "embedding_dim": 10
    },
    "encoder": {
      "hidden_size": 10,
      "num_heads": 2,
      "num_layers": 1,
      "user_cls_only": true,
      "output_dim": 1
    }
  },
  "optimizer": {
    "lr": 1e-5
  },
  "callback": {
    "type": "composite",
    "callbacks": [
      {
        "type": "metric",
        "on_step": 1,
        "loss_prefix": "loss"
      },
      {
        "type": "validation",
        "on_step": 30,
        "pred_prefix": "logits",
        "labels_prefix": "labels",
        "metrics": {
          "precision": {
            "type": "precision"
          },
          "accuracy": {
            "type": "accuracy"
          },
          "f1_score": {
            "type": "f1_score"
          }
        }
      }
    ]
  }
}
